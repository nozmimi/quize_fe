<%= link_to "ＴＯＰページへ戻る", "/quizzes" %>
<hr>
<h2>問題を追加する</h2>
<br>

<div class="container">

  <%= form_tag "/quizzes", method: :post do %>
  
    問題: 
    <br>
    
    <div class="input-group">

        <%= text_area_tag :question, '', class: "form-control"  %>
    </div>
    <br>
    <br>

   	解答: 
   	<br>
   	<%= text_area_tag :selection, '', class: "form-control" %>
   	<br>
   	<br>

   	正解：
   	<br>
   	<%= text_area_tag :answer, '', class: "form-control" %>
   	<br>
   	<br>
    <hr> 	
   	<%= submit_tag "問題を追加する", :class => "btn btn-success" %>
    
  <% end %>
<br>
</div>